{
  "manifest_version": 3,
  "name": "YouTube Link Saver",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "scripting",
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/watch*",
    "https://www.youtube.com/shorts/*"
  ],
  "action": {
    "default_title": "Save YouTube Link"
  }
}
